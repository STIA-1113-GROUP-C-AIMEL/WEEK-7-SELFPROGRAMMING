package whileIf;

import java.util.Scanner;

public class Bankpassword2 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int i, a, password;
		
		Scanner scan = new Scanner(System.in);
		  for(i=2;i>=0;i--) {
	            System.out.print("Enter your account password: ");
	            a =scan.nextInt();
	            password = 011006;
	            if(a==password) {
	            System.out.println("Your password is correct.");
	            break;
	            }
	            else
	            System.out.print("Your password is wrong! You have "+i+" chance.");
	            System.out.println();
	            if (i==0) {
	            	System.out.print("Sorry, you need to wait 10 minutes to key in your password again!");
	            	break;
	            }
	            else
	            System.out.println("Please enter again!");
	            
	          
		 
		  }
		  scan.close();
	}

}

OUTPUT
Enter your account password: 0110
Your password is wrong! You have 2 chance.
Please enter again!
Enter your account password: 1236
Your password is wrong! You have 1 chance.
Please enter again!
Enter your account password: 1454
Your password is correct.
