package selfProgramming;

public class Exercise2 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		// to declare
		int sum = 0;
		int number = 1;
		
		// print output
		while (number<=10) {
			sum += number;
			number = number + 5;
			System.out.println("SUM :"+ sum);
		}
		System.out.println("Good Bye");
	}

}

OUTPUT
SUM :1
SUM :7
Good Bye
